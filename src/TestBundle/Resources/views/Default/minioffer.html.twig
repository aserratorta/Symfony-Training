{% set expirated=offer.expirationDate|date('YmdHis') < 'now'|date('YmdHis') %}
{% set bought = bought |default(false) %}

{% if not expirated and not bought %}
    <a class="button" href="#">Comprar</a>
{% endif %}

<section class="mini offer">
    <div class="description">
        <h2><a href="{{ path('offer', {'city': offer.city.slug, 'slug':
                offer.slug}) }}">{{ offer.name }}</a></h2>

        {{ offer.description }}

        <a class="button" href="#">Comprar</a>

        <div class="estate {{ expirated ? 'expirated':'' }}{{ bought ? 'bought':'' }}">
            {% if bought %}
                Comprada el {{ shoppingDate | date('d/m/Y') }}
            {% elseif not expirated %}
                {#<strong>Falten</strong>: {{ offer.expirationDate | count_down }}#}
            {% else %}
                Finalitzada el {{ offer.expirationDate |date('d/m/Y') }}
            {% endif %}
        </div>
    </div>

    <div class="gallery">
        <img alt="Offer's picture" src="{{ asset('uploads/images/' ~ offer.picture) }}">

        <p class="price">{{ offer.price }} &euro; <span>{#{{ discount(offer.price, offer.discount) }}#}</span></p>

        <p>Disfruta d'aquest oferta en <a href="#">{{ offer.shop.name }}</a></p>
    </div>
</section>
